<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kurume_nct.onthebounce.activity.GameActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/round_fragment"
        android:name="com.kurume_nct.onthebounce.fragment.TitleAndValueFragment"
        android:layout="@layout/fragment_title_and_value"/>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hp_fragment"
        android:name="com.kurume_nct.onthebounce.fragment.TitleAndValueFragment"
        android:layout="@layout/fragment_title_and_value"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ready_button"
        android:text="準備完了"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dead_button"
        android:text="自害"
        />

</LinearLayout>
