<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kurume_nct.onthebounce.activity.ResultActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hit_fragment"
        android:name="com.kurume_nct.onthebounce.fragment.TitleAndValueFragment"
        android:layout="@layout/fragment_title_and_value"/>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hitted_fragment"
        android:name="com.kurume_nct.onthebounce.fragment.TitleAndValueFragment"
        android:layout="@layout/fragment_title_and_value"/>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hit_rate_fragment"
        android:name="com.kurume_nct.onthebounce.fragment.TitleAndValueFragment"
        android:layout="@layout/fragment_title_and_value"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_over_button"
        android:text="終了"
        />
</LinearLayout>
